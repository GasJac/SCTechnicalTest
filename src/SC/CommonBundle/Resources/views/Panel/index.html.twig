{% extends "SCCommonBundle:Panel:layout.html.twig" %}

{% block extraStylesheets %}
<!-- DataTables -->
  <link rel="stylesheet" href="../../public/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
{% endblock %}
    
    {% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1 style="text-align: center"><i class="fa fa-graduation-cap"></i> Students</h1>
      <ol class="breadcrumb">
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
             <div class="student-add" style="width: 100%">
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
            <div class="box-header">
             <div class="student-add" style="width: 100%">
              <a href="{{path('student_add')}}"><button type="button" class="btn btn-primary" style="width: 20%;margin-bottom: 2%;"><i class="fa fa-plus"></i>  Add a student</button></a>
              </div>
            </div>
            <div class="table-responsive" style="overflow-x: hidden">
              <table id="example1" class="table table-striped table-hover dt-responsive display nowrap" cellspacing="0">
                <thead>
                <tr>
                  <th>Lastname</th>
                  <th>Firstname</th>
                  <th>Num Etud</th>
                  <th>Department</th>
                  <th>Action</th>
                </tr>
                </thead>
                {% for student in listStudent %}
                <tr>
                  <td>{{ student.lastname }}</td>
                  <td>{{ student.firstname }}</td>
                  <td>{{ student.numEtud }}</td>
                  <td>{{ student.department.name }}</td>
                  <td><a href="{{path('student_view'  , {'id': student.id}  )}}" style="font-size:30px;"> <i class="fa fa-eye"></i></a>
                  <a href="{{path('student_edit'  , {'id': student.id}  )}}" style="font-size:30px; padding-left: 10px"> <i class="fa fa-pencil-square-o"></i></a>
                  <a href="{{path('student_delete'  , {'id': student.id}  )}}" style="font-size:30px; padding-left: 10px"> <i class="fa fa-trash"></i></a>
                  </td>
                </tr>
                {% endfor %}
              </table>
              <div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
    {% endblock %}
    {% block extraJavascript %}
    <!-- page script -->
    <script>
      $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
          'paging'      : true,
          'lengthChange': false,
          'searching'   : false,
          'ordering'    : true,
          'info'        : true,
          'autoWidth'   : false
          })
        })
    </script>
    {% endblock %}